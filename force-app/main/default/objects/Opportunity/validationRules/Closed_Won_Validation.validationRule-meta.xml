<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Won_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Phase__c, &quot;Closed-Won&quot;),  
    ISCHANGED(Phase__c)
)</errorConditionFormula>
    <errorDisplayField>Phase__c</errorDisplayField>
    <errorMessage>The Phase field cannot be modified after the approval process is completed.</errorMessage>
</ValidationRule>
